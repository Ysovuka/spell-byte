@model SpellByte.Web.ViewModels.Effect.NatureTypesViewModel

<div class="form-group">
    <label asp-for="Affliction" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="Affliction"
                asp-items="@Model.Afflictions"
                class="form-control"></select>
        <span asp-validation-for="Affliction" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="Damage" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Damage" class="form-control" type="number" />
        <span asp-validation-for="Damage" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    <label asp-for="DamageStyle" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="DamageStyle"
                asp-items="@(Enum.GetValues(typeof(DamageStyles))
                            .Cast<DamageStyles>()
                            .Select(t => new SelectListItem
                            {
                                Text = t.GetAttribute<System.ComponentModel.DataAnnotations.DisplayAttribute>().Name,
                                Value = t.ToString()
                            }).ToList())"
                class="form-control"></select>
        <span asp-validation-for="DamageStyle" class="text-danger"></span>
    </div>
</div>