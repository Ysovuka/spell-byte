@model SpellByte.Web.ViewModels.Affliction.IndexViewModel

<div class="form-horizontal">
    <h4>Afflictions</h4> - <a asp-action="Create">Create</a>
    <hr />
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var affliction in Model.Afflictions)
            {
                <tr>
                    <td>@affliction.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@affliction.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@affliction.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>